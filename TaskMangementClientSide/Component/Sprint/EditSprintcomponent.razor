@using Task.Application.DTOs
@using TaskMangementClientSide.Services
@inject SprintService SprintService

<div class="modal-overlay">
    <div class="modal-content shadow-lg rounded-4 p-4 bg-white">
        <h5 class="fw-bolder mb-3 text-center" style="color:#2c3e50;">Edit Sprint</h5>

        <EditForm Model="@editableSprint" OnValidSubmit="HandleValidSubmit">
            <DataAnnotationsValidator />

           
            <div class="mb-3">
                <label class="form-label fw-semibold" style="color:#2c3e50;">Sprint Name<span class="text-danger">*</span></label>
                <InputText class="form-control" style="background-color:#ecf0f1;"
                           @bind-Value="editableSprint.Name"
                           placeholder="Enter sprint name" />
                <ValidationMessage For="@(() => editableSprint.Name)" />
            </div>

         
            <div class="mb-3">
                <label class="form-label fw-semibold" style="color:#2c3e50;">Start Date<span class="text-danger">*</span></label>
                <InputDate class="form-control w-50" style="background-color:#ecf0f1;"
                           @bind-Value="editableSprint.StartDate" />
                <ValidationMessage For="@(() => editableSprint.StartDate)" />
            </div>

          
            <div class="mb-3">
                <label class="form-label fw-semibold" style="color:#2c3e50;">End Date<span class="text-danger">*</span></label>
                <InputDate class="form-control w-50" style="background-color:#ecf0f1;"
                           @bind-Value="editableSprint.EndDate" />
                <ValidationMessage For="@(() => editableSprint.EndDate)" />
            </div>

            <!-- Footer Buttons -->
            <div class="mt-4 d-flex justify-content-end gap-2">
                <button type="button" class="btn btn-secondary me-2" @onclick="Cancel">Cancel</button>
                <button type="submit" class="btn btn-primary px-4"
                        style="background-color:#2c3e50;"
                        disabled="@isSubmitting">
                    @if (isSubmitting)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span>
                    }
                    Update
                </button>
            </div>
        </EditForm>
    </div>
</div>

@code {
    [Parameter] public SprintDto SprintToEdit { get; set; } = new();   // Sprint passed from parent
    [Parameter] public EventCallback OnUpdated { get; set; }           // Notify parent after save
    [Parameter] public EventCallback OnCancel { get; set; }            // Close modal

    private SprintDto editableSprint = new();
    private bool isSubmitting = false;

    protected override void OnParametersSet()
    {
        Console.WriteLine($"Editing Sprint: {SprintToEdit.Id}, {SprintToEdit.Name}");
       
        editableSprint = new SprintDto
        {
            Id = SprintToEdit.Id,
            Name = SprintToEdit.Name,
            StartDate = SprintToEdit.StartDate,
            EndDate = SprintToEdit.EndDate
        };
    }

    private async Task HandleValidSubmit()
    {
        try
        {
            isSubmitting = true;
            bool isUpdated = await SprintService.UpdateSprintAsync(editableSprint.Id, editableSprint);

            if (isUpdated)
            {
                await OnUpdated.InvokeAsync();
            }
            else
            {
                Console.WriteLine("Failed to update sprint");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error updating sprint: {ex.Message}");
        }
        finally
        {
            isSubmitting = false;
           
        }
    }

    private async Task Cancel()
    {
        await OnCancel.InvokeAsync();
    }
}
